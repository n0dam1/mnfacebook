<div class="container-fluid">
  <%= render 'form' %>
  <% @topics.each do |topic| %>
  <div class="row">
      <p style="float: left;"><%= profile_img(topic.user) %></p>
      <%= link_to user_path(topic.user) do %>
      <p style="float: left; margin: 5px;"><%= topic.user.name %></p>
      <% end %>
    <p style="clear: both;"><%= topic.content %></p>
    <p class="topic-content"><%= time_ago_in_words topic.created_at %></p>
    <%= link_to topic_path(topic) do %>
    <p class="fa fa-comment">コメントする</p>
    <% end %>
    <% if topic.user_id == current_user.id %>
    <br>
    <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
    <%= link_to "削除", topic_path(topic.id), method: :delete, class: 'btn btn-default btn-sm btn-danger', data: { confirm: '本当に削除してよろしいですか？', cancel: "やめる", commit: "削除する" }, title: "削除の確認" %>
    <% end %>
  </div>
  <% end %>
</div>
